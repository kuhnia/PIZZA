@model List<Drink>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
</head>

<h2>Видалити напій</h2>

<div id="blok1">
    <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
        <input type="radio" class="btn-check" name="btnradio" id="btnradio1" autocomplete="off">
        <a asp-action="DeletePizza" asp-controller="User" class="btn btn-outline-primary" for="btnradio1">Піца</a>

        <input type="radio" class="btn-check" name="btnradio" id="btnradio2" autocomplete="off">
        <a asp-action="DeleteSushi" asp-controller="User" class="btn btn-outline-primary" for="btnradio2">Суші</a>

        <input type="radio" class="btn-check" name="btnradio" id="btnradio3" autocomplete="off" checked>
        <a asp-action="DeleteDrinks" asp-controller="User" class="btn btn-outline-primary" for="btnradio3">Напої</a>
    </div>
</div>

@foreach (Drink drink in Model)
{
    <div class="blokRemoval">
        <img src="data:image/jpeg;base64,@(Convert.ToBase64String(drink.Img))" class="BasketImgTovar" />
        <b class="textBasket">@drink.Name</b>
        <b class="textBasket">@drink.Price</b>
        <button type="button" class="btn btn-primary DeleteBatton">Видалити страву</button>
    </div>
}



