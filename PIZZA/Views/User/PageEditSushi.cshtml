@model PIZZA.ViewModels.UpdateSushiModel
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
</head>
<br />
<h2>Редагувати суші</h2>


<form asp-action="PageEditSushi" asp-controller="User" asp-antiforgery="true" method="post" enctype="multipart/form-data">

    <div class="block">
        <input value="@Model.Id" asp-for="Id" hidden />
        <label><b>Назва</b></label><br />
        <input value="@Model.Name" class="contentBox" type="text" asp-for="Name">
        <br />
        <label><b>Зображення</b></label><br />
        <div class="fileform">
            <div id="fileformlabel"></div>
            <div class="selectbutton">Обзор</div>
            <input type="file" asp-for="Img" id="upload" onchange="getName(this.value);" />
        </div>
        <br />
        <label><b>Опис</b></label><br />
        <input value="@Model.Description" class="contentBox" type="text" asp-for="Description">
        <br />
        <label><b>Ціна</b></label><br />
        <input value="@Model.Price" class="contentBox" type="text" asp-for="Price">
        <br />
        <label><b>Категорія</b></label><br />
        <select class="contentBox" id="cars" asp-for="Category">
            <option value="set">Сети</option>
            <option value="rol">Роли</option>
        </select>
        <br />

        <button class="button" type="submit">Добавити</button>
    </div>

</form>


