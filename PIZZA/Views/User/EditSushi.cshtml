<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
</head>

<h2>Редагувати суші</h2>

<div id="blok1">
    <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
        <input type="radio" class="btn-check" name="btnradio" id="btnradio1" autocomplete="off">
        <a asp-action="EditPizza" asp-controller="User" class="btn btn-outline-primary" for="btnradio1">Піца</a>

        <input type="radio" class="btn-check" name="btnradio" id="btnradio2" autocomplete="off" checked>
        <a asp-action="Sushi" asp-controller="User" class="btn btn-outline-primary" for="btnradio2">Суші</a>

        <input type="radio" class="btn-check" name="btnradio" id="btnradio3" autocomplete="off">
        <a asp-action="EditDrinks" asp-controller="User" class="btn btn-outline-primary" for="btnradio3">Напої</a>
    </div>
</div>


@foreach (Sushi sushi in Model)
{
    <div class="blokRemoval">
        <img src="data:image/jpeg;base64,@(Convert.ToBase64String(sushi.Img))" class="BasketImgTovar" />
        <b class="textBasket">@sushi.Name </b>
        <b class="textBasket">@sushi.Price</b>
        <a asp-action="PageEditSushi" asp-controller="User">
            <button type="button" class="btn btn-primary DeleteBatton">Редагувати</button>
        </a>
</div>
}

