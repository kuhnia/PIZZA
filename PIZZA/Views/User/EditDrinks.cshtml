@model PIZZA.ViewModels.EditDrinksModel
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
</head>

<h2>Редагувати напій</h2>

<div id="blok1">
    <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
        <input type="radio" class="btn-check" name="btnradio" id="btnradio1" autocomplete="off">
        <a asp-action="EditPizza" asp-controller="User" class="btn btn-outline-primary" for="btnradio1">Піца</a>

        <input type="radio" class="btn-check" name="btnradio" id="btnradio2" autocomplete="off">
        <a asp-action="Sushi" asp-controller="User" class="btn btn-outline-primary" for="btnradio2">Суші</a>

        <input type="radio" class="btn-check" name="btnradio" id="btnradio3" autocomplete="off" checked>
        <a asp-action="EditDrinks" asp-controller="User" class="btn btn-outline-primary" for="btnradio3">Напої</a>
    </div>
</div>


@foreach (Drink drink in Model.Drinks)
{
<form asp-action="PageEditDrinks" asp-controller="User" asp-antiforgery="true" method="get" enctype="multipart/form-data">
    <div class="blokRemoval">
        <img src="data:image/jpeg;base64,@(Convert.ToBase64String(drink.Img))" class="BasketImgTovar" />
        <b class="textBasket">@drink.Name</b>
        <b class="textBasket">@drink.Price</b>
        <input type="text" asp-for="Id" value="@drink.Id" hidden />
        <button type="submit" class="btn btn-primary DeleteBatton">Редагувати</button>
    </div>
</form>
        }

