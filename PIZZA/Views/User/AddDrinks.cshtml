<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
</head>

    <h2>Добавити напої</h2>

    <div id="blok1">
        <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
            <input type="radio" class="btn-check" name="btnradio" id="btnradio1" autocomplete="off">
            <a asp-action="AddPizza" asp-controller="User" class="btn btn-outline-primary" for="btnradio1">Піца</a>

            <input type="radio" class="btn-check" name="btnradio" id="btnradio2" autocomplete="off" >
            <a asp-action="AddSushi" asp-controller="User" class="btn btn-outline-primary" for="btnradio2">Суші</a>

            <input type="radio" class="btn-check" name="btnradio" id="btnradio3" autocomplete="off" checked>
            <a asp-action="AddDrinks" asp-controller="User" class="btn btn-outline-primary" for="btnradio3">Напої</a>
        </div>
    </div>

    <form method="post">

        <div class="block">
            <label><b>Назва</b></label><br />
            <input class="contentBox" type="text" name="Fname">
            <br />
            <label><b>Зображення</b></label><br />
            <input class="contentBox" type="text" name="Lname">
            <br />
            <label><b>Ціна</b></label><br />
            <input class="contentBox" type="text" name="Position">
            <br />
            <label><b>Категорія</b></label><br />
            <select class="contentBox" id="cars" name="kategory" form="carform">
                <option value="set">Алкогольні</option>
                <option value="rol">Без алкогольні</option>
            </select>
            <br />

            <button class="button" type="submit">Добавити</button>
        </div>

    </form>

