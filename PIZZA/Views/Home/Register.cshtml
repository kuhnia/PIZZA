@*@model PIZZA.ViewModels.LoginModel*@
@model PIZZA.ViewModels.RegisterModel

<div class="row">
    <div class="col-md-6 mx-auto p-0">
        <div class="card">
            <div class="login-box">
                <div class="login-snip">

                    <input id="tab-2" type="radio" name="tab" class="sign-up" checked>
                    <label for="tab-2" class="tab">Зареєструватись</label></a>

                    <a asp-action="Login" asp-controller="Home">
                        <div for="tab-1" class="tab">Війти</div>
                    </a>

                    <div class="login-space">
                        <form asp-action="Register" asp-controller="Home" asp-anti-forgery="true">
                            <div class="validation" asp-validation-summary="ModelOnly"></div>
                            <div class="sign-up-form">
                                <div class="group"> <label for="user" class="label">Email</label> <input id="user" type="text" asp-for="Email" class="input" placeholder="Добавте свій емейл"> </div>
                                <div class="group"> <label for="pass" class="label">Пароль</label> <input id="pass" type="password" asp-for="Password" class="input" data-type="password" placeholder="Добавте свій пароль"> </div>
                                <div class="group"> <label for="pass" class="label">Номер телефона</label> <input id="pass" type="tel" asp-for="PhoneNumber" class="input" placeholder="Добавте свій номер телефону"> </div>
                                <div class="group"> <input type="submit" class="button" value="Зареєструватись"> </div>
                                <div class="hr"></div>
                                <div class="foot"> <label for="tab-1">Already Member?</label> </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>