@model List<Sushi>

@{ ViewData["Title"] = "Sushi Page"; }

<div class="fotorama" data-loop="true" data-transition="crossfade" data-autoplay="5000">
    <img src="~/image/slide1.jpg">
    <img src="~/image/slide2.jpg">
    <img src="/image/slide3.jpg">
</div>

<h4>Суші: роли</h4>

<div class="row clasic">
    @foreach (Sushi sushi in Model)
    {
        @if (sushi.Category != "rol")
        {
            continue;
        }
        <div class="col-3 col-sm-12 col-md-6 col-lg-3 col-xl-3 col-xxl-1">
            <div class="PizzaBlok">
                <div class="imgPizza" style=" background: url('data:image/jpeg;base64,@(Convert.ToBase64String(sushi.Img))')">
                    <div class="blokPizza">
                        <b> Склад: </b><br />
                        @sushi.Description
                    </div>
                </div>
                <b>@sushi.Name</b>
                <p class="price">@sushi.Price грн</p>
                <button class="button-1" onclick="AddSushiToCast(@sushi.Id);">В корзину</button>
            </div>
        </div>
    }

    <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 col-xxl-12 LoadMore">
        <button type="button" class="btn btn-outline-secondary " id="look">Дивитись більше</button>
    </div>

</div>


