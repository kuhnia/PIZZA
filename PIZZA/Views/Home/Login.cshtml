@model PIZZA.ViewModels.LoginModel

<div class="row">
    <div class="col-md-6 mx-auto p-0">
        <div class="card">
            <div class="login-box">
                <div class="login-snip">
                    <input id="tab-1" type="radio" name="tab" class="sign-in" checked>
                    <label for="tab-1" class="tab">Війти</label>

                    <a asp-action="Register" asp-controller="Home">
                        <div for="tab-2" class="tab">Зареєструватися</div>
                    </a>
                    <div class="login-space">
                        <form asp-action="Login" asp-controller="Home" asp-anti-forgery="true">
                            <div class="validation" asp-validation-summary="ModelOnly"></div>
                            <div class="login">
                                <div class="group"> <label for="user" class="label">імя користувача</label> <input id="user" type="text" asp-for="Email" class="input" placeholder="введіть ваш email"> </div>
                                <div class="group"> <label for="pass" class="label">пароль</label> <input id="pass" type="password" asp-for="Password" class="input" data-type="password" placeholder="введіть ваш пароль"> </div>
                                <div class="group"> <input id="check" type="checkbox" class="check" checked> <label for="check"><span class="icon"></span> Keep me Signed in</label> </div>
                                <div class="group"> <input type="submit" class="button" value="війти"> </div>
                                <div class="hr"></div>
                               
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>